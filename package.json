{
  "name": "pokedex",
  "version": "1.0.1",
  "description": "Pokedex App Created by PedroSmaxY",
  "main": "./dist/js/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx tsc",
    "start": "npm run build && Electron .",
    "package": "electron-packager . Pokedex --platform=win32 --arch=x64 --icon=./public/icons/favicon.ico",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.github.PedroSmaxy.PokedexTypeScript",
    "productName": "Pokedex",
    "win": {
      "target": "nsis",
      "icon": "./public/icons/icon-512x512.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "./public/icons/icon-512x512.icns"
    },
    "linux": {
      "target": [
        "deb",
        "rpm"
      ],
      "icon": "./public/icons/icon-512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/js/**/*",
      "./*.html",
      "./public/**/*",
      "./css/**/*"
    ]
  },
  "keywords": [
    "pokedex",
    "typescript",
    "electron"
  ],
  "author": "github.com/PedroSmaxY",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "typescript": "^5.3.3"
  }
}
